<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    tools:ignore="MissingDefaultResource">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewChatLeft"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="272dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/roundedImageViewChatLeftImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/icon" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/cardViewChatLeft"
        android:background="@drawable/shape_chat_left"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_text"
            android:layout_width="200dp"
            android:layout_height="260dp"
            android:maxWidth="250dp"
            android:minWidth="120dp"
            android:maxHeight="250dp"
            android:minHeight="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_text"
            android:layout_alignRight="@+id/image_text"
            android:textColor="@color/dark_purple_gray"
            android:textSize="11sp"
            tools:text="11:34" />

    </RelativeLayout>
</RelativeLayout>