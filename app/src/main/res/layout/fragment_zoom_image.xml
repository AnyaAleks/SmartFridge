<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_button"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewZoomImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/icon_cactus"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_x"
        android:layout_width="33dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:checked="false"
        app:chipBackgroundColor="@color/lavender"
        app:chipIcon="@drawable/ic_baseline_arrow_forward"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_zoom_in"
        android:layout_width="33dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:checked="false"
        app:chipBackgroundColor="@color/lavender"
        app:chipIcon="@drawable/ic_baseline_zoom_in"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_zoom_out"
        android:layout_width="33dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:checked="false"
        app:chipBackgroundColor="@color/lavender"
        app:chipIcon="@drawable/ic_baseline_zoom_out"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_rotate"
        android:layout_width="33dp"
        android:layout_height="50dp"
        android:layout_marginStart="88dp"
        android:checked="false"
        app:chipBackgroundColor="@color/lavender"
        app:chipIcon="@drawable/ic_baseline_rotate_right"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>